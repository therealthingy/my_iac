/* --- Counter for headings --- */
      /* Counter resets */
body { counter-reset: part; }
h1 { counter-reset: section; }
h2 { counter-reset: sub-section; }
h3 { counter-reset: composite; }
h4 { counter-reset: detail; }

      /* Counter increments + display format */
h1:before {
  counter-increment: part;
  content: counter(part) " ";
}
h2:before {
  counter-increment: section;
  content: counter(part) "." counter(section) " ";
}
h3:before {
  counter-increment: sub-section;
  content: counter(part) "." counter(section) "." counter(sub-section) " ";
}
h4:before {
  counter-increment: composite;
  content: counter(part) "." counter(section) "." counter(sub-section) "." counter(composite) " ";
}

/* ????? ????? ????? */
h5:before {
  counter-increment: detail;
  content: counter(part) "." counter(section) "." counter(sub-section) "." counter(composite) "." counter(detail) " ";
}
